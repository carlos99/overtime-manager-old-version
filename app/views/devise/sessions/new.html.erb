<div class="col-md-8 col-md-offset-2 form-md-8-container">
  <h2 class="h2-title">Log in</h2>

  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-horizontal") do |f| %>

        <div class="col-md-1">
          <div class="form-group">
            <i class="glyphicon glyphicon-user login-icons"></i>
          </div>
        </div>

        <div class="col-md-11">
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, class: "form-control login-form", placeholder: "youremail@example.com" %>
          </div>
        </div>

        <div class="col-md-1">
          <div class="form-group">
          <i class="glyphicon glyphicon-lock login-icons" aria-hidden="true"></i>
          </div>
        </div>

        <div class="col-md-11">
          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", class: "form-control login-form", placeholder: "********" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "control-label" %>
          </div>
        <% end -%>

        <div class="form-group">
          <%= f.submit "Log in", class: 'btn btn-primary' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
</div>
