<h1>Posts</h1>

<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>
				#
			</th>
			<th>
				Date
			</th>
			<th>
				Rationale
			</th>
		</tr>
	</thead>
	<tbody>
		<% @posts.each do |post| %>
			<tr>
				<td>
					<%= post.id %>
				</td>
				<td>
					<%= post.date %>
				</td>

				<td>
					<%= truncate(post.rationale) %>
				</td>
				<td>
					<%= link_to 'Edit', edit_post_path(post), id: "edit_#{post.id}"%>
				</td>
				<td>
					<%= link_to 'Delete', post_path(post), method: :delete, id: "delete_post_#{post.id}_from_index"%>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
